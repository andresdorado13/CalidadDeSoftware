    <div id="cambio">

      <h2>Propuestas Actuales</h2>
        <div>
            <p>Usted tiene acceso a la información de propuestas de su departamento</p> 
        </div>







    <h3 class="mt-3">Lista de Propuestas</h3>
{{#each propuestas}}
    <div class="card my-3">
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-thumbnail" src="/img/propuestas/{{this.foto}}" alt="">
                </div>
                <div class="col-md-8">
                    <p><b>Título: </b> {{ this.titulo }}</p>
                    <p><b>Descripción: </b> {{ this.descripcion }}</p>
                </div>
            </div>
            <div class="text-end">
                <a class="btn btn-sm btn-outline-success" href="/edit-propuestas/{{this.id}}">Editar</a>
                <a class="btn btn-sm btn-outline-danger"
                   onclick="return confirm('¿Está seguro que desea eliminar?')"
                   href="/delete-plato/{{this.id}}">Eliminar</a>
            </div>
        </div>
    </div>
{{/each}}










    
    <main>
      <div class="row mt-4">
    <div class="col-md-6 offset-md-3">
        <div class="card" style="background-color: rgba(104, 23, 23, 0.705);">
            <div class="card-header">
                <h3>Registrar Propuesta</h3>
            </div>
            <div class="card-body">
                <form action="/store-propuesta" method="post" enctype="multipart/form-data">
                    <div class="my-3">
                        <label for="nombre">Título</label>
                        <input required class="form-control" id="nombre" name="nombre" type="text" placeholder="Título">
                    </div>

                    <div class="my-3">
                        <label for="arch">PDF</label>
                        <input required class="form-control" id="arch" name="arch" type="file">
                    </div>

                    <div class="my-3">
                        <label for="descripcion">Descripción</label>
                        <textarea required name="descripcion" id="descripcion" class="form-control" cols="30" rows="10"></textarea>
                    </div>

                    <div class="text-end">
                        <input class="btn btn-primary" type=submit value="PUBLICAR">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
        
    </main>   



    </div>

    
 