  table{
    width: 55%;
  }

  table caption{
    font-size: 19px;
    font-weight: bold;
    padding: 20px;
  }

  table tbody tr:nth-child(even){
    background-color: #bd0f0fae;
  }

  table tbody tr:nth-child(odd){
    background-color: white;
  }

  table tbody tr:nth-child(1) {
    background-color: #060606;
    font-weight: bold;
    color: white;
  }

 h2 {
